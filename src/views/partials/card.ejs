<div class="card">
    <div class="card__media">
        <div class="card__image">
            <img src="/images/products/6_id_chardonnay.png" alt="" srcset="">
        </div>
        <div class="card__cta">
            <div class="card__rating">
                <p class="card__rating-points">
                    <%= rating %>
                </p>
                <p class="card__rating-qty">
                    <%= ratingQty %>
                </p>
            </div>
            <a href="#" class="btn btn--primary">
                <%= price %>
            </a>
        </div>
    </div>
    <div class="card__copy">
        <p class="card__wine-brand">
            <%= brand %>
        </p>
        <p class="card__wine-name">
            <%= name %>
        </p>
    </div>
</div>